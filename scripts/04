#! /bin/sh

# Modifier le fichier crontab de root : sudo crontab -e
# 00 00 * * * /home/vagrant/04

original="8f111d100ea459f68d333d63a8ef2205"
current=`md5sum /etc/crontab | cut -d ' ' -f1`

if [ $original != $current ]
then
	echo "The file /etc/crontab has been modified" | mailx -s "Your file /etc/crontab" root
fi
